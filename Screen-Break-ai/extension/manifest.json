{
  "manifest_version": 3,
  "name": "Screen-Break-ai",
  "version": "1.0",
  "description": "A smart Chrome extension that monitors work habits and uses Gemini AI to deliver personalized, health-focused break recommendations.",

  "permissions": [
    "storage",
    "notifications",
    "alarms",
    "idle",
    "downloads",
    "tabs"
  ],

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; style-src 'self' 'unsafe-inline';"
  },

  "host_permissions": [
    "<all_urls>"
  ],

  "background": {
    "service_worker": "background/break-scheduler.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup/dist/index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/activity-tracker.js"],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["popup/dist/*", "tab.html", "icon.png"],
      "matches": ["<all_urls>"]
    }
  ]
}